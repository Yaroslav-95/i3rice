[colors]
background = #212121
background-alt = #000000
background-alt2 = #151515
foreground = ${xrdb:foreground}
foreground-alt = #555
primary = ${xrdb:color3}
secondary = ${xrdb:color5}
alert = ${xrdb:color1}
col = #00f

[padding]
small = 1
large = 2

[bar/top]
width = 100%
height = 26
;offset-x = 1%
;offset-y = 1%
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = {$xrdb:color1}

border-size = 0
border-color = #00000000

padding-top = 5
padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = FuraCode Nerd Font Mono:pixelsize=11;1
font-1 = icomoon:pixelsize=11;1.5
font-2 = Symbola:pixelsize=13;1.5

modules-left = i3 recordstatus mpd volume
modules-center = date
modules-right = xkeyboard weather filesystem memory battery ipadd

tray-position = right
tray-padding = 0
;tray-transparent = true
tray-background = ${colors.background-alt}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
